<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_altura_atual"
        android:layout_width="90dp"
        android:layout_height="110dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="16dp"
        android:elevation="10dp"
        app:cardCornerRadius="21dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/medidas_edit" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_Height"
        android:layout_width="90dp"
        android:layout_height="110dp"
        android:layout_marginEnd="50dp"
        app:cardCornerRadius="21dp"
        app:layout_constraintBottom_toBottomOf="@+id/cardview_fat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cardview_fat"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_fat"
        android:layout_width="90dp"
        android:layout_height="110dp"
        app:cardCornerRadius="21dp"
        app:layout_constraintEnd_toStartOf="@+id/cardview_Height"
        app:layout_constraintStart_toEndOf="@+id/cardview_altura_atual"
        app:layout_constraintTop_toTopOf="@+id/cardview_altura_atual" />

    <Button
        android:id="@+id/button_guardar_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent"
        android:elevation="10dp"
        android:text="Guardar"
        android:textColor="#A5A5A5"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/coordinatorLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardview_fat"
        app:strokeColor="#A5A5A5"
        app:strokeWidth="2dp" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bottom_appbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:fabCradleMargin="10dp"
            app:fabCradleRoundedCornerRadius="10dp"
            app:fabCradleVerticalOffset="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottom_navbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="16dp"
                android:background="@drawable/transparent_background"
                app:menu="@menu/bottom_navbar_funcionario" />
        </com.google.android.material.bottomappbar.BottomAppBar>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <TextView
        android:id="@+id/nome_cliente_edit"
        android:layout_width="183dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/gray_background"
        android:elevation="10dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#F4F4F4"
        app:layout_constraintBottom_toBottomOf="@+id/cardview_name_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cardview_name_edit"
        app:layout_constraintTop_toTopOf="@+id/cardview_name_edit" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_name_edit"
        android:layout_width="140dp"
        android:layout_height="35dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#393939"
        android:elevation="10dp"
        android:textAlignment="center"
        app:cardCornerRadius="21dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_personal_data_edit">

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView_personal_data_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:text="Dados Pessoais"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="21sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_code_edit"
        android:layout_width="140dp"
        android:layout_height="35dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#393939"
        android:elevation="10dp"
        app:cardCornerRadius="21dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardview_aniversario_edit">

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/aniversario_edit"
        android:layout_width="183dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/gray_background"
        android:elevation="10dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#F8F8F8"
        app:layout_constraintBottom_toBottomOf="@+id/cardview_aniversario_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cardview_aniversario_edit"
        app:layout_constraintTop_toTopOf="@+id/cardview_aniversario_edit" />

    <TextView
        android:id="@+id/edit_code"
        android:layout_width="183dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/gray_background"
        android:elevation="10dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#FAFAFA"
        app:layout_constraintBottom_toBottomOf="@+id/cardview_code_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cardview_code_edit"
        app:layout_constraintTop_toTopOf="@+id/cardview_code_edit" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_email_edit"
        android:layout_width="140dp"
        android:layout_height="35dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#393939"
        android:elevation="10dp"
        app:cardCornerRadius="21dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardview_code_edit" />

    <TextView
        android:id="@+id/edit_email"
        android:layout_width="183dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/gray_background"
        android:elevation="10dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#EDEBEB"
        app:layout_constraintBottom_toBottomOf="@+id/cardview_email_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cardview_email_edit"
        app:layout_constraintTop_toTopOf="@+id/cardview_email_edit" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_aniversario_edit"
        android:layout_width="140dp"
        android:layout_height="35dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#393939"
        android:elevation="10dp"
        android:textAlignment="center"
        app:cardCornerRadius="21dp"
        app:cardElevation="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardview_name_edit" />

    <TextView
        android:id="@+id/nome_edit_cliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:elevation="10dp"
        android:text="Nome"
        app:layout_constraintStart_toStartOf="@+id/cardview_name_edit"
        app:layout_constraintTop_toTopOf="@+id/cardview_name_edit" />

    <TextView
        android:id="@+id/datanascimento_edit_cliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:elevation="10dp"
        android:text="Data Nascimento"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="@+id/cardview_aniversario_edit"
        app:layout_constraintTop_toTopOf="@+id/cardview_aniversario_edit" />

    <TextView
        android:id="@+id/codigopostal_edit_cliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:elevation="10dp"
        android:text="Código Postal"
        app:layout_constraintStart_toStartOf="@+id/cardview_code_edit"
        app:layout_constraintTop_toTopOf="@+id/cardview_code_edit" />

    <TextView
        android:id="@+id/email_edit_cliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:elevation="10dp"
        android:text="Email"
        app:layout_constraintStart_toStartOf="@+id/cardview_email_edit"
        app:layout_constraintTop_toTopOf="@+id/cardview_email_edit" />

    <TextView
        android:id="@+id/medidas_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="16dp"
        android:text="Medidas"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="21sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardview_email_edit" />

    <TextView
        android:id="@+id/textView_edit_peso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:elevation="10dp"
        android:text="Peso"
        android:textAlignment="center"
        android:textColor="#A5A5A5"
        app:layout_constraintEnd_toEndOf="@+id/cardview_altura_atual"
        app:layout_constraintStart_toStartOf="@+id/cardview_altura_atual"
        app:layout_constraintTop_toTopOf="@+id/cardview_altura_atual" />

    <TextView
        android:id="@+id/textView_edit_kg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="10dp"
        android:text="kg"
        android:textAlignment="center"
        android:textColor="#EFEFEF"
        app:layout_constraintBottom_toBottomOf="@+id/cardview_altura_atual"
        app:layout_constraintEnd_toEndOf="@+id/cardview_altura_atual"
        app:layout_constraintStart_toStartOf="@+id/cardview_altura_atual" />

    <TextView
        android:id="@+id/textView_edit_peso_atual"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:background="@drawable/grey_shape_background"
        android:elevation="10dp"
        app:layout_constraintBottom_toTopOf="@+id/textView_edit_kg"
        app:layout_constraintEnd_toEndOf="@+id/cardview_altura_atual"
        app:layout_constraintStart_toStartOf="@+id/cardview_altura_atual"
        app:layout_constraintTop_toBottomOf="@+id/textView_edit_peso" />

    <TextView
        android:id="@+id/textView_edit_altura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:elevation="10dp"
        android:text="Altura"
        android:textAlignment="center"
        android:textColor="#A5A5A5"
        app:layout_constraintEnd_toEndOf="@+id/cardview_fat"
        app:layout_constraintStart_toStartOf="@+id/cardview_fat"
        app:layout_constraintTop_toTopOf="@+id/cardview_fat" />

    <TextView
        android:id="@+id/textView_edit_cm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="10dp"
        android:shadowColor="#F3F3F3"
        android:text="cm"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/cardview_fat"
        app:layout_constraintEnd_toEndOf="@+id/cardview_fat"
        app:layout_constraintStart_toStartOf="@+id/cardview_fat" />

    <TextView
        android:id="@+id/edit_peso_atual"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:background="@drawable/grey_shape_background"
        android:elevation="10dp"
        app:layout_constraintBottom_toTopOf="@+id/textView_edit_cm"
        app:layout_constraintEnd_toEndOf="@+id/cardview_fat"
        app:layout_constraintStart_toStartOf="@+id/cardview_fat"
        app:layout_constraintTop_toBottomOf="@+id/textView_edit_altura" />

    <TextView
        android:id="@+id/textView_edit_gordura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:elevation="10dp"
        android:text="Gordura"
        android:textColor="#A5A5A5"
        app:layout_constraintEnd_toEndOf="@+id/cardview_Height"
        app:layout_constraintStart_toStartOf="@+id/cardview_Height"
        app:layout_constraintTop_toTopOf="@+id/cardview_Height" />

    <TextView
        android:id="@+id/textView_edit_percentagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="10dp"
        android:text="%"
        android:textColor="#F8F8F8"
        app:layout_constraintBottom_toBottomOf="@+id/cardview_Height"
        app:layout_constraintEnd_toEndOf="@+id/cardview_Height"
        app:layout_constraintStart_toStartOf="@+id/cardview_Height" />

    <TextView
        android:id="@+id/edit_gordura_atual"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:background="@drawable/grey_shape_background"
        android:elevation="10dp"
        app:layout_constraintBottom_toTopOf="@+id/textView_edit_percentagem"
        app:layout_constraintEnd_toEndOf="@+id/cardview_Height"
        app:layout_constraintStart_toStartOf="@+id/cardview_Height"
        app:layout_constraintTop_toBottomOf="@+id/textView_edit_gordura" />

</androidx.constraintlayout.widget.ConstraintLayout>