<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#E5E5E5">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="end"
        android:layout_margin="20dp"
        app:cardCornerRadius="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/profile_pic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:src="@drawable/defaultprofilepic" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/cardview"
        app:layout_constraintStart_toEndOf="@+id/cardview"
        app:layout_constraintTop_toTopOf="@+id/cardview" />

    <TextView
        android:id="@+id/textMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="TextView"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/cardview"
        app:layout_constraintStart_toEndOf="@+id/cardview"
        app:layout_constraintTop_toBottomOf="@+id/textNome" />

    <ImageButton
        android:id="@+id/editButton"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/transparent_background"
        app:layout_constraintBottom_toBottomOf="@+id/textNome"
        app:layout_constraintStart_toEndOf="@+id/textNome"
        app:layout_constraintTop_toTopOf="@+id/textNome"
        app:srcCompat="@drawable/ic_baseline_edit_note_24" />

    <TextView
        android:id="@+id/textMeasurements"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:text="Measurements"
        android:textColor="#fff"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardview" />

    <TextView
        android:id="@+id/textViewWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:elevation="10dp"
        android:text="Weight"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="@+id/placeholderFuncionarioInfo"
        app:layout_constraintStart_toStartOf="@+id/placeholderFuncionarioInfo"
        app:layout_constraintTop_toTopOf="@+id/placeholderFuncionarioInfo" />

    <TextView
        android:id="@+id/textViewValueWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:text="TextView"
        android:textColor="#fff"
        app:layout_constraintBottom_toTopOf="@+id/textViewKG"
        app:layout_constraintEnd_toEndOf="@+id/placeholderFuncionarioInfo"
        app:layout_constraintStart_toStartOf="@+id/placeholderFuncionarioInfo"
        app:layout_constraintTop_toBottomOf="@+id/textViewWeight" />

    <TextView
        android:id="@+id/textViewKG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:elevation="10dp"
        android:text="KG"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="@+id/placeholderFuncionarioInfo"
        app:layout_constraintEnd_toEndOf="@+id/placeholderFuncionarioInfo"
        app:layout_constraintStart_toStartOf="@+id/placeholderFuncionarioInfo" />

    <TextView
        android:id="@+id/textViewHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:elevation="10dp"
        android:text="Height"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="@+id/cardViewHeight"
        app:layout_constraintStart_toStartOf="@+id/cardViewHeight"
        app:layout_constraintTop_toTopOf="@+id/cardViewHeight" />

    <TextView
        android:id="@+id/textViewValueHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:text="TextView"
        android:textColor="#fff"
        app:layout_constraintBottom_toTopOf="@+id/textViewCM"
        app:layout_constraintEnd_toEndOf="@+id/cardViewHeight"
        app:layout_constraintStart_toStartOf="@+id/cardViewHeight"
        app:layout_constraintTop_toBottomOf="@+id/textViewHeight" />

    <TextView
        android:id="@+id/textViewCM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:elevation="10dp"
        android:text="CM"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="@+id/cardViewHeight"
        app:layout_constraintEnd_toEndOf="@+id/cardViewHeight"
        app:layout_constraintStart_toStartOf="@+id/cardViewHeight" />

    <TextView
        android:id="@+id/textViewFat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:elevation="10dp"
        android:text="Fat"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="@+id/cardViewFat"
        app:layout_constraintStart_toStartOf="@+id/cardViewFat"
        app:layout_constraintTop_toTopOf="@+id/cardViewFat" />

    <TextView
        android:id="@+id/textViewValueFat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:text="TextView"
        android:textColor="#fff"
        app:layout_constraintBottom_toTopOf="@+id/textViewPercent"
        app:layout_constraintEnd_toEndOf="@+id/cardViewFat"
        app:layout_constraintStart_toStartOf="@+id/cardViewFat"
        app:layout_constraintTop_toBottomOf="@+id/textViewFat" />

    <TextView
        android:id="@+id/textViewPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:elevation="10dp"
        android:text="%"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="@+id/cardViewFat"
        app:layout_constraintEnd_toEndOf="@+id/cardViewFat"
        app:layout_constraintStart_toStartOf="@+id/cardViewFat" />

    <androidx.cardview.widget.CardView
        android:id="@+id/placeholderFuncionarioInfo"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_gravity="end"
        android:layout_marginStart="48dp"
        android:layout_marginTop="16dp"
        android:background="#393939"
        app:cardCornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textMeasurements"></androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewHeight"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_gravity="end"
        android:background="#393939"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toStartOf="@+id/cardViewFat"
        app:layout_constraintStart_toEndOf="@+id/placeholderFuncionarioInfo"
        app:layout_constraintTop_toTopOf="@+id/placeholderFuncionarioInfo">

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewFat"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_gravity="end"
        android:layout_marginEnd="50dp"
        android:background="#393939"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/placeholderFuncionarioInfo">

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/buttonMarcarConsulta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@android:color/transparent"
        android:text="Mark"
        android:textColor="#A5A5A5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCM"
        app:strokeColor="#A5A5A5"
        app:strokeWidth="2dp" />

    <TextView
        android:id="@+id/textStats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="25dp"
        android:text="Stats"
        android:textColor="#fff"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonMarcarConsulta" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewAnnualEntries"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_gravity="end"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:background="#393939"

        app:cardCornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textStats">

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewMontlyEntries"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_gravity="end"
        android:layout_marginStart="4dp"

        android:background="#393939"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toStartOf="@+id/cardViewMonthEntries"
        app:layout_constraintStart_toEndOf="@+id/cardViewAnnualEntries"
        app:layout_constraintTop_toTopOf="@+id/cardViewAnnualEntries">

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewMonthEntries"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_gravity="end"
        android:layout_marginEnd="50dp"
        android:background="#393939"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cardViewAnnualEntries">

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textViewAnnualEntries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:elevation="10dp"
        android:text="Annual"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="@+id/cardViewAnnualEntries"
        app:layout_constraintStart_toStartOf="@+id/cardViewAnnualEntries"
        app:layout_constraintTop_toTopOf="@+id/cardViewAnnualEntries" />

    <TextView
        android:id="@+id/textViewValueAnnualEntries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:text="TextView"

        android:textColor="#fff"
        app:layout_constraintBottom_toTopOf="@+id/textViewDays1"
        app:layout_constraintEnd_toEndOf="@+id/cardViewAnnualEntries"
        app:layout_constraintStart_toStartOf="@+id/cardViewAnnualEntries"
        app:layout_constraintTop_toBottomOf="@+id/textViewAnnualEntries" />

    <TextView
        android:id="@+id/textViewDays1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:elevation="10dp"
        android:text="Days"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="@+id/cardViewAnnualEntries"
        app:layout_constraintEnd_toEndOf="@+id/cardViewAnnualEntries"
        app:layout_constraintStart_toStartOf="@+id/cardViewAnnualEntries" />

    <TextView
        android:id="@+id/textViewMontlyEntries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:elevation="10dp"
        android:text="Montly"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="@+id/cardViewMontlyEntries"
        app:layout_constraintStart_toStartOf="@+id/cardViewMontlyEntries"
        app:layout_constraintTop_toTopOf="@+id/cardViewMontlyEntries" />

    <TextView
        android:id="@+id/textViewValueMontlyEntries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:text="TextView"

        android:textColor="#fff"
        app:layout_constraintBottom_toTopOf="@+id/textViewDays2"
        app:layout_constraintEnd_toEndOf="@+id/cardViewMontlyEntries"
        app:layout_constraintStart_toStartOf="@+id/cardViewMontlyEntries"
        app:layout_constraintTop_toBottomOf="@+id/textViewMontlyEntries" />

    <TextView
        android:id="@+id/textViewDays2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:elevation="10dp"
        android:text="Days"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="@+id/cardViewMontlyEntries"
        app:layout_constraintEnd_toEndOf="@+id/cardViewMontlyEntries"
        app:layout_constraintStart_toStartOf="@+id/cardViewMontlyEntries" />

    <TextView
        android:id="@+id/textViewMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:elevation="10dp"
        android:text="TextView"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="@+id/cardViewMonthEntries"
        app:layout_constraintStart_toStartOf="@+id/cardViewMonthEntries"
        app:layout_constraintTop_toTopOf="@+id/cardViewMonthEntries" />

    <TextView
        android:id="@+id/textViewValueMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:text="TextView"

        android:textColor="#fff"
        app:layout_constraintBottom_toTopOf="@+id/textViewDays3"

        app:layout_constraintEnd_toEndOf="@+id/cardViewMonthEntries"
        app:layout_constraintStart_toStartOf="@+id/cardViewMonthEntries"
        app:layout_constraintTop_toBottomOf="@+id/textViewMonth" />

    <TextView
        android:id="@+id/textViewDays3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:elevation="10dp"
        android:text="Days"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="@+id/cardViewMonthEntries"
        app:layout_constraintEnd_toEndOf="@+id/cardViewMonthEntries"
        app:layout_constraintStart_toStartOf="@+id/cardViewMonthEntries" />

    <TextView
        android:id="@+id/textLastWorkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="25dp"
        android:text="Last Workout"
        android:textColor="#fff"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardViewAnnualEntries" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewLastWorkout"
        android:layout_width="310dp"
        android:layout_height="100dp"
        android:layout_gravity="end"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:background="#393939"
        app:cardCornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textLastWorkout">

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/TextViewLastWorkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:elevation="10dp"
        android:textStyle="bold"
        android:text="Last Workout"
        app:layout_constraintEnd_toEndOf="@+id/cardViewLastWorkout"
        app:layout_constraintStart_toStartOf="@+id/cardViewLastWorkout"
        app:layout_constraintTop_toTopOf="@+id/cardViewLastWorkout" />

    <TextView
        android:id="@+id/textViewDateLastWorkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:text="TextView"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonLastWorkoutDetails"
        app:layout_constraintEnd_toEndOf="@+id/cardViewLastWorkout"
        app:layout_constraintStart_toStartOf="@+id/cardViewLastWorkout"
        app:layout_constraintTop_toBottomOf="@+id/TextViewLastWorkout" />

    <Button
        android:id="@+id/buttonLastWorkoutDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@android:color/transparent"
        android:text="Detalhes"
        android:textColor="#A5A5A5"
        app:layout_constraintBottom_toBottomOf="@+id/cardViewLastWorkout"
        app:layout_constraintEnd_toEndOf="@+id/cardViewLastWorkout"
        app:layout_constraintStart_toStartOf="@+id/cardViewLastWorkout"
        app:strokeColor="#A5A5A5"
        app:strokeWidth="2dp" />

</androidx.constraintlayout.widget.ConstraintLayout>